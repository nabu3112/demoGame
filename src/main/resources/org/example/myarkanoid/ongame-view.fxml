<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="400" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.myarkanoid.ControlGameScene">
    <Canvas fx:id="canvas" height="600" width="400" />
    <Button fx:id="btn2"
            layoutX="340" layoutY="15"
            onAction="#backToMenu"
            visible="false"
            prefHeight="15.0" prefWidth="50.0" style="-fx-background-color: #4db6ac;"
            text="Menu" />
    <Button fx:id="btn1"
            layoutX="340" layoutY="15"
            visible="false"
            prefHeight="15.0" prefWidth="50.0"
            style="-fx-background-color: #ff6f61;"
            text="Set" />
    <Button fx:id="mainButton"
            layoutX="330" layoutY="15.0"
            onAction="#handleMainButtonClick"
            prefHeight="15.0" prefWidth="60.0"
            style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-background-radius: 0px;"
            text="main" />
</AnchorPane>
